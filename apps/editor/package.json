{
  "name": "@taxonomy/editor",
  "version": "0.1.0",
  "description": "SvelteKit note-taking application",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ap0nia/taxonomy",
    "directory": "apps/editor"
  },
  "scripts": {
    "postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && svelte-kit sync",
    "format": "prettier --write .",
    "lint": "eslint .",
    "dev": "vite",
    "build": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "check": "svelte-check",
    "dep": "cdk --app 'npx tsx tools/cdk/index.ts' deploy",
    "des": "cdk --app 'npx tsx tools/cdk/index.ts' destroy"
  },
  "type": "module",
  "dependencies": {
    "@aponia.js/auth.js": "^0.5.2",
