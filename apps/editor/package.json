    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.3",
    "svelte": "^4.2.13",
    "svelte-check": "^3.6.9",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.2",
    "typescript": "^5.1.6",
    "typescript-svelte-plugin": "^0.3.37",
    "unplugin-icons": "^0.18.5",
