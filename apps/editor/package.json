    "@tanstack/svelte-query": "^5.29.0",
    "@taxonomy/ui": "workspace:^",
    "bits-ui": "^0.21.3",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.30.8",
    "effect": "^2.4.18",
    "elysia": "^1.0.13",
    "jiti": "^1.21.0",
    "js-cookie": "^3.0.5",
    "mode-watcher": "^0.3.0",
